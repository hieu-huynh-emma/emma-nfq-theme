  {
    "name": "Reviews",
	"class": "reviews",
    "settings": [],
 "blocks" : [
        {
          "type": "product-review",
          "name": "Product",
          "settings": [
            {
            "type": "product",
            "id": "product-item",
            "label": "Product"
            }
          ]
        }
	]



  }
{% endschema %}

